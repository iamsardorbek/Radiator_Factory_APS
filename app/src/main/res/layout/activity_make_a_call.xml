<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_make_a_call"
    tools:context=".MakeACall">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:textStyle="bold"
            android:id="@+id/call_operator"
            android:text="Вызвать оператора"
            android:textSize="24sp"
            android:padding="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:id="@+id/call_repairer"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="40dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Вызвать ремонтника"
            android:textSize="24sp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="match_parent"
            android:id="@+id/call_master"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="30dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Вызвать мастера"
            android:textSize="24sp"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/master_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv" />
</androidx.drawerlayout.widget.DrawerLayout>