<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/quest_activity_end_of_checking"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".QuestEndOfChecking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/shop"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/shop"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textColor="@color/text"
                android:padding="5dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/edit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/equipmentLine"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/equipmentLine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/edit"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/numberOfProblems"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/numberOfProblems"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/text"
                android:padding="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@drawable/edit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/checkingDuration"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/checkingDuration"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textColor="@color/text"
                android:padding="5dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/edit" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </View>

        <Button
            android:id="@+id/newChecking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:layout_weight="0.6"
            android:background="@drawable/edit_red_accent"
            android:drawableStart="@drawable/new_revise"
            android:drawableLeft="@drawable/new_revise"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:text="@string/newRevision"
            android:textColor="@color/text"
            tools:ignore="NestedWeights,RtlSymmetry" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/master_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>